// -- IMPORTS

import 'controller.php';
import '../../MODEL/product_model.php';

// -- TYPES

class DO_EDIT_PRODUCT_CONTROLLER extends CONTROLLER
{
    method constructor(
        int product_id
        )
    {
        parent::constructor();

        var slug = GetPostValue( 'Slug' );
        var name = GetPostValue( 'Name' );
        var text = GetPostValue( 'Text' );
        var image = GetPostValue( 'Image' );
        var video = GetPostValue( 'Video' );
        var department_slug = GetPostValue( 'DepartmentSlug' );

        SetDatabaseProduct( product_id, slug, name, text, image, video, department_slug );

        Redirect( '/admin/product' );
    }
}

// -- STATEMENTS

var do_edit_product_controller = new DO_EDIT_PRODUCT_CONTROLLER( var product_id );
