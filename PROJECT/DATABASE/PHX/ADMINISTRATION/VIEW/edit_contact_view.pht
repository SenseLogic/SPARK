                    <input-component result-class="form-input" result-name="DateTime" result-value="<% GetValueText( .Contact.DateTime ) %>"></input-component>
                </div>
                <a class="justify-self-start form-button form-button-large cancel-button" onclick="SetPriorUrl()">
