.scroll-down-reminder
{
    position: absolute;
    bottom: 0.5rem;
    left: 50%;
    transform: translate-x( -50% );

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

    opacity: 1;

    transition: opacity 0.3s ease;
}

body.is-scrolled .scroll-down-reminder
{
    opacity: 0;
}

.scroll-down-reminder-text
{
    line-height: 1rem;
    font-size: 0.8rem;
    font-weight: 400;
    text-transform: uppercase;
    color: WhiteColor;
}

@keyframes scroll-down-reminder-icon-animation
{
    0%
    {
        transform: translateY( -1rem );

        opacity: 0;
    }

    100%
    {
        transform: translateY( 0rem );

        opacity: 1;
    }
}

.scroll-down-reminder-icon
{
    margin-top: 1rem;
    height: 0.8rem;
    width: 0.8rem;

    opacity: 1;
    background: url( "/static/image/base/scroll_down_icon.svg" ) no-repeat center center;
    background-size: contain;

    transition: all 0.25s ease;
    animation: scroll-down-reminder-icon-animation 1s ease infinite;
}
