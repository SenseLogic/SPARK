.cookie-consent-banner-container
{
    z-index: 1000;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;

    margin-left: auto;
    margin-right: auto;
    max-width: 20rem;
    border-top-left-radius: 1rem;
    border-top-right-radius: 1rem;
    padding: 1.25rem;

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

    background-color: WhiteColor;
    box-shadow: 0 0.25rem 0.5rem rgba( 128, 128, 128, 0.5 );

    font-size: 1rem;
    color: BlackColor;
}

.cookie-consent-banner-container a,
.cookie-consent-banner-container a:visited
{
    text-decoration: underline;
    color: GrayColor200;
}

.cookie-consent-banner-text
{
    text-align: center;
    color: GrayColor200;
}

.cookie-consent-banner-button-container
{
    margin-top: 1.25rem;

    display: flex;
    justify-content: center;
    align-items: center;
}

.cookie-consent-banner-button
{
    margin-left: 0.25rem;
    margin-right: 0.25rem;
    border-radius: 0.25rem;
    padding: 0.25rem 1rem;

    color: WhiteColor;
}

.cookie-consent-banner-accept-button
{
    background-color: RedColor;
}

.cookie-consent-banner-decline-button
{
    background-color: GrayColor600;
}

.cookie-consent-banner-settings-button
{
    background-color: GrayColor600;
}
