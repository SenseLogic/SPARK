MakeTextColorValue( "white-gray", WhiteGrayColor );
MakeTextColorValue( "white", WhiteColor );
MakeTextColorValue( "red", RedColor );
MakeTextColorValue( "blue", BlueColor );
MakeBackgroundColorValue( "black", BlackColor );
