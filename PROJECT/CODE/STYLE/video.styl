.video
{
    position: relative;

    max-height: var( --viewport-height );
    width: 100%;
    padding: 1rem;

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: start;

    color: WhiteColor;

    +Media( min-width-65em )
    {
        padding: 2rem;
    }
}

.video-video
{
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;

    height: 100%;
    width: 100%;

    object-fit: cover;
}
