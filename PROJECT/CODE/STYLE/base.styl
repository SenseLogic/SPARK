// ~~

.is-hidden
{
    display: none !important;
}

.button
{
    cursor: pointer;
}

.link-button
{
    color: LinkColor;

    cursor: pointer;
}

.link-button:hover
{
    color: LinkHoverColor;
}

.paragraph
{
    min-height: 1em;
}

.paragraph + .paragraph
{
    margin-top: 0.8em;
}

.linebreak
{
    margin-bottom: 0.8em;
}

.title-1
{
    font-size: 2rem;
}

.title-2
{
    font-size: 1.75rem;
}

.title-3
{
    font-size: 1.5rem;
}

.title-4
{
    font-size: 1.25rem;
}

.dash-1
{
    margin-left: 1em;
}

.dash-2
{
    margin-left: 2em;
}

.dash-3
{
    margin-left: 3em;
}

.dash-4
{
    margin-left: 4em;
}

.dash-1::before,
.dash-2::before,
.dash-3::before,
.dash-4::before
{
    position: absolute;
    transform: translateX( -0.9em );

    content: "-";
}

.bullet-1
{
    margin-left: 1em;
}

.bullet-2
{
    margin-left: 2em;
}

.bullet-3
{
    margin-left: 3em;
}

.bullet-4
{
    margin-left: 4em;
}

.bullet-1::before,
.bullet-2::before,
.bullet-3::before,
.bullet-4::before
{
    position: absolute;
    transform: translateX( -0.9em );

    content: "\2022";
}

.view
{
    position: absolute;
    top: 0;
    left: 0;
    right: 0;

    overflow: hidden;

    flex-shrink: 0;
}

.page
{
    position: relative;

    height: auto;
    min-height: 100vh;
    width: 100%;

    display: flex;
    flex-direction: column;
}

.block
{
    margin-bottom: 2rem;

    display: block;
    justify-content: center;
    align-items: stretch;

    +Media( min-width-50em )
    {
        margin-bottom: 2rem;

        display: flex;
    }
}

.block-column
{
    width: 100%;

    +Media( min-width-50em )
    {
        width: 50%;
    }
}

.block-image-column
{
    min-height: 60vh;

    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;

    +Media( min-width-50em )
    {
        min-height: 20rem;
    }
}

.block-text-column
{
    padding: 2rem;

    +Media( min-width-50em )
    {
        min-height: 20rem;
        padding: 5rem;
    }
}

.block-title
{
    margin-bottom: 1em;

    font-size: 1.2rem;
    font-weight: 600;
}

.block-text
{
    font-size: 1rem;
}
