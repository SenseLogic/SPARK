// -- CONSTANTS

BlackColor = #000000;
DarkestGrayColor = #202020;
DarkerGrayColor = #404040;
DarkGrayColor = #808080;
GrayColor = #A0A0A0;
LightGrayColor = #C0C0C0;
LighterGrayColor = #F0F0F0;
LightestGrayColor = #F8F8F8;
WhiteColor = #FFFFFF;
RedColor = #FF0000;
GreenColor = #00FF00;
BlueColor = #0000FF;

LinkColor = #86B4F0;
LinkHoverColor = #A2C2EC;
TableBorderColor = #888888;

ScrollbarWidth = 0.4rem;
ScrollbarColor = rgba( 255, 255, 255, 0.3 );
ScrollbarHoverColor = rgba( 255, 255, 255, 0.2 );
ScrollbarBackgroundColor = rgba( 0, 0, 0, 0.1 );

// -- ELEMENTS

html
{
    height: 100%;
    min-height: 100%;
}

body
{
    height: 100%;
    min-height: 100%;

    background-color: WhiteColor;
}

body,
button,
input,
textarea
{
    font-family: "Ubuntu", sans-serif;
}

sup
{
    position: relative;
    top: -0.7em;

    font-size: 0.5em;
    vertical-align: baseline;
}

table
{
    margin-top: 1rem;
    margin-bottom: 1rem;
    border-collapse: collapse;
}

table tr:first-child
{
    font-weight: 700;
    text-align: center;
}

td
{
    border: 1px solid TableBorderColor;
    padding: 0.5rem;
}

a,
a:link,
a:visited
{
    color: LinkColor;
}

a:active,
a:hover
{
    color: LinkHoverColor;
}

html,
body,
body *,
button,
input,
textarea
{
    scrollbar-width: thin;
    scrollbar-color: ScrollbarColor ScrollbarBackgroundColor;
}

::-webkit-scrollbar
{
    height: ScrollbarWidth;
    width: ScrollbarWidth;
}

::-webkit-scrollbar-thumb
{
    background: ScrollbarColor;
}

::-webkit-scrollbar-thumb:hover
{
    background: ScrollbarHoverColor;
}

::-webkit-scrollbar-track
{
    background: ScrollbarBackgroundColor;
}

// -- CLASSES

MakeExtendedContainer();
MakeMarginedContainer( 1.25rem, 40 * Pxm 5rem 7.5rem 10rem 12.5rem, min-width-40em min-width-60em min-width-80em min-width-100em min-width-120em, "large-" );
MakeMarginedContainer( 1.25rem, 5rem 7.5rem 10rem 12.5rem 240 * Pxm, min-width-40em min-width-60em min-width-80em min-width-100em min-width-120em, "narrow-" );
MakePaddedContainer( 1.25rem, 2.5rem 5rem 7.5rem 10rem 12.5rem, min-width-40em min-width-60em min-width-80em min-width-100em min-width-120em, "large-" );
MakePaddedContainer( 1.25rem, 5rem 7.5rem 10rem 12.5rem 240 * Pxm, min-width-40em min-width-60em min-width-80em min-width-100em min-width-120em, "narrow-" );
MakeMarginLeftAuto( , , "\!", !important );
MakeMarginRightAuto( , , "\!", !important );
MakeOverflowScrollbarHidden();
MakeScrollSnapTypeMandatory();
MakeScrollSnapAlignStart();
MakeScrollSnapAlignEnd();

SetRootFontSize( 1rem, 1.1rem 1.2rem 1.3rem 1.4rem, min-width-90em min-width-100em min-width-110em min-width-120em );

MakeScaledButton( 0.25s, ease, 1.1 );
MakeZoomedButton( 0.8s, ease, 1.05 );
MakeYTranslationOpacityTransition( ".is-visible", 1.8s, ease, 10% );

// ~~

.is-hidden
{
    display: none !important;
}

.button
{
    cursor: pointer;
}

.link-button
{
    color: LinkColor;

    cursor: pointer;
}

.link-button:hover
{
    color: LinkHoverColor;
}

.paragraph
{
    min-height: 1em;
}

.paragraph + .paragraph
{
    margin-top: 0.8em;
}

.linebreak
{
    margin-bottom: 0.8em;
}

.title-1
{
    font-size: 2rem;
}

.title-2
{
    font-size: 1.75rem;
}

.title-3
{
    font-size: 1.5rem;
}

.title-4
{
    font-size: 1.25rem;
}

.dash-1
{
    margin-left: 1em;
}

.dash-2
{
    margin-left: 2em;
}

.dash-3
{
    margin-left: 3em;
}

.dash-4
{
    margin-left: 4em;
}

.dash-1::before,
.dash-2::before,
.dash-3::before,
.dash-4::before
{
    position: absolute;
    transform: translateX( -0.9em );

    content: "-";
}

.bullet-1
{
    margin-left: 1em;
}

.bullet-2
{
    margin-left: 2em;
}

.bullet-3
{
    margin-left: 3em;
}

.bullet-4
{
    margin-left: 4em;
}

.bullet-1::before,
.bullet-2::before,
.bullet-3::before,
.bullet-4::before
{
    position: absolute;
    transform: translateX( -0.9em );

    content: "\2022";
}

.view
{
    position: absolute;
    top: 0;
    left: 0;
    right: 0;

    overflow: hidden;

    flex-shrink: 0;
}

.page
{
    position: relative;

    height: auto;
    min-height: 100vh;
    width: 100%;

    display: flex;
    flex-direction: column;
}

.block
{
    margin-bottom: 2rem;

    display: block;
    justify-content: center;
    align-items: stretch;

    +Media( min-width-50em )
    {
        margin-bottom: 2rem;

        display: flex;
    }
}

.block-column
{
    width: 100%;

    +Media( min-width-50em )
    {
        width: 50%;
    }
}

.block-image-column
{
    min-height: 60vh;

    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;

    +Media( min-width-50em )
    {
        min-height: 20rem;
    }
}

.block-text-column
{
    padding: 2rem;

    +Media( min-width-50em )
    {
        min-height: 20rem;
        padding: 5rem;
    }
}

.block-title
{
    margin-bottom: 1em;

    font-size: 1.2rem;
    font-weight: 600;
}

.block-text
{
    font-size: 1rem;
}
