// -- CONSTANTS

BlackColor = #000000;
DarkestGrayColor = #202020;
DarkerGrayColor = #404040;
DarkGrayColor = #808080;
GrayColor = #A0A0A0;
LightGrayColor = #C0C0C0;
LighterGrayColor = #F0F0F0;
LightestGrayColor = #F8F8F8;
WhiteColor = #FFFFFF;
RedColor = #FF0000;
GreenColor = #00FF00;
BlueColor = #0000FF;

LinkColor = #86B4F0;
LinkHoverColor = #A2C2EC;
TableBorderColor = #888888;
ScrollbarThumbColor = rgba( 255, 255, 255, 0.3 );
ScrollbarThumbHoverColor = rgba( 255, 255, 255, 0.2 );
ScrollbarTrackColor = rgba( 0, 0, 0, 0.1 );

// -- ELEMENTS

html
{
    height: 100%;
    min-height: 100%;
}

body
{
    height: 100%;
    min-height: 100%;

    background-color: GrayColor;
}

body,
button,
input,
textarea
{
    font-family: "Ubuntu", sans-serif;
}

.view-content-text-container a,
.view-content-text-container a:link
{
    color: LinkColor;
}

.view-content-text-container a:hover,
.view-content-text-container a:active
{
    color: LinkHoverColor;
}

sup
{
    position: relative;
    top: -0.7em;

    font-size: 0.5em;
    vertical-align: baseline;
}

table
{
    border-collapse: collapse;
    margin-top: 1rem;
    margin-bottom: 1rem;
}

table tr:first-child
{
    font-weight: 700;
    text-align: center;
}

td
{
    border: 1px solid TableBorderColor;
    padding: 0.5rem;
}

html,
body,
body *,
button,
input,
textarea
{
    scrollbar-width: thin;
    scrollbar-color: ScrollbarThumbColor ScrollbarTrackColor;
}

::-webkit-scrollbar
{
    width: 0.4rem;
}

::-webkit-scrollbar-thumb
{
    background: ScrollbarThumbColor;
}

::-webkit-scrollbar-thumb:hover
{
    background: ScrollbarThumbHoverColor;
}

::-webkit-scrollbar-track
{
    background: ScrollbarTrackColor;
}

