// -- CONSTANTS

BlackColor = #000000;
DarkestGrayColor = #202020;
DarkerGrayColor = #404040;
DarkGrayColor = #808080;
GrayColor = #A0A0A0;
LightGrayColor = #C0C0C0;
LighterGrayColor = #F0F0F0;
LightestGrayColor = #F8F8F8;
WhiteColor = #FFFFFF;
RedColor = #FF0000;
GreenColor = #00FF00;
BlueColor = #0000FF;

// -- ELEMENTS

html
{
    height: 100%;
    min-height: 100%;
}

body
{
    height: 100%;
    min-height: 100%;

    background-color: GrayColor;
}

body,
body *,
button,
input,
textarea
{
    font-family: "Ubuntu", sans-serif !important;
}

sup
{
    position: relative;
    top: -0.7em;

    font-size: 0.5em;
    vertical-align: baseline;
}

::-webkit-scrollbar
{
    width: 1rem;
}

::-webkit-scrollbar-track
{
    background: rgba( 0, 0, 0, 0.2 );
}

::-webkit-scrollbar-thumb
{
    background: rgba( 255, 255, 255, 0.3 );
}

::-webkit-scrollbar-thumb:hover
{
    background: rgba( 255, 255, 255, 0.5 );
}

