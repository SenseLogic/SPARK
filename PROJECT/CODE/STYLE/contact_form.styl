.contact-form
{
    margin-top: 4rem;
    border-radius: 0.5rem;
    padding: 1rem;

    background-color: LightGrayColor;
}

.contact-form-input
{
    height: 3rem;
    width: 20rem;
    border-radius: 0.5rem;
    padding: 0.5rem;

    text-align: center;

    background-color: WhiteColor;
}

.contact-form-input::placeholder
{
    text-align: center;
    color: LightGrayColor;
}

.contact-form-input:invalid,
.contact-form-input.is-invalid
{
    border: 2px solid RedColor;

    box-shadow: none;
}

.contact-form-captcha-image
{
    margin-left: 1rem;
    height: 3rem;
    border-radius: 0.5rem;
}

.contact-form-row
{
    display: flex;
}

.contact-form-row + .contact-form-row
{
    margin-top: 1rem;
}

.contact-form-send-button
{
    margin-left: auto;
    height: 3rem;
    border-radius: 0.5rem;
    padding: 0 2rem;

    display: inline-block;

    line-height: 3rem;
    color: WhiteColor;

    background: DarkGrayColor;

    cursor: pointer;
}

.contact-form-thanks-text
{
    font-size: 3rem;
    font-weight: 500;
    text-align: center;
    color: WhiteColor;
}
