.header-menu
{
    z-index: 100;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;

    padding-top: 1rem;
    padding-bottom: 1rem;

    display: flex;
    justify-content: center;
    align-items: center;

    background-color: transparent;

    transition: background-color 0.3s ease;
}

.header-menu:not(.is-open).is-scrolled
{
    background-color: rgba( 0, 0, 0, 0.3 );
}

.header-menu.is-open
{
    +Media( below-50em )
    {
        min-height: 100vh;

        background-color: rgba( 0, 0, 0, 0.5 );
    }
}

.header-menu-button-container
{
    height: 100%;
    width: 100%;

    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.header-menu.is-open .header-menu-button-container
{
    +Media( below-50em )
    {
        display: none;
    }
}

.header-menu-button
{
    font-size: 1rem;
    color: WhiteColor;

    cursor: pointer;
    transition: transform 0.3s ease;
}

.header-menu-button:hover
{
    transform: scale( 1.2 );
}

.header-menu-button.is-selected
{
    font-weight: bold;
}

.header-menu-button + .header-menu-button
{
    margin-left: 1rem;
}

.header-menu-desktop-button
{
    +Media( below-50em )
    {
        display: none;
    }
}

.header-menu-icon-button
{
    height: 2rem;
    width: 2rem;

    cursor: pointer;
    transition: transform 0.3s ease;
}

.header-menu-icon-button:hover
{
    transform: scale( 1.2 );
}

.header-menu-icon-button + .header-menu-icon-button
{
    margin-left: 1rem;
}

.header-menu-open-button
{
    background: url( "/static/image/header/menu_button.svg" ) no-repeat center center;
    background-size: contain;

    +Media( above-50em )
    {
        display: none;
    }
}

.header-menu-mobile-button-container
{
    height: 100%;
    width: 100%;

    display: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.header-menu.is-open .header-menu-mobile-button-container
{
    +Media( below-50em )
    {
        display: flex;
    }
}

.header-menu-mobile-button
{
    border-radius: 8px;
    padding: 5px 10px;

    font-size: 2rem;
    color: WhiteColor;

    cursor: pointer;
    transition: transform 0.3s ease;
}

.header-menu-mobile-button:hover
{
    transform: scale( 1.2 );
}

.header-menu-mobile-button.is-selected
{
    color: BlackColor;
}

.header-menu-mobile-button + .header-menu-mobile-button
{
    margin-top: 1rem;
}

.header-menu-close-button
{
    position: absolute;
    top: 1rem;
    right: 1rem;

    background: url( "/static/image/header/close_button.svg" ) no-repeat center center;
    background-size: contain;
}
