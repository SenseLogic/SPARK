.header-menu
{
    z-index: 100;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    padding: 8px;
    display: flex;
    justify-content: center;
    align-items: center;

    background-color: transparent;
}

.header-menu:not(.is-open).is-scrolled
{
    background-color: rgba( 255, 255, 255, 0.8 );
}

.header-menu.is-open
{
    +Media( below-50em )
    {
        min-height: 100vh;
        background-color: rgba( 0, 0, 0, 0.5 );
    }
}

.header-menu-button-container
{
    display: flex;
    justify-content: flex-start;
    align-items: center;
    height: 100%;
    width: 100%;
}

.header-menu.is-open .header-menu-button-container
{
    +Media( below-50em )
    {
        display: none;
    }
}

.header-menu-button
{
    border-radius: 8px;
    padding: 5px 10px;
    background-color: #444444;
    color: #FFFFFF;
    cursor: pointer;
}

.header-menu-button:hover,
.header-menu-button.is-selected
{
    background-color: #CCCCCC;
    color: #000000;
}

.header-menu-button + .header-menu-button
{
    margin-left: 1rem;
}

.header-menu-desktop-button
{
    +Media( below-50em )
    {
        display: none;
    }
}

.header-menu-icon-button
{
    height: 2rem;
    width: 2rem;
}

.header-menu-open-button
{
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    background: url( "/static/image/header/menu_button.svg" ) no-repeat center center;
    background-size: contain;

    +Media( above-50em )
    {
        display: none;
    }
}

.header-menu-mobile-button-container
{
    display: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100%;
    width: 100%;
}

.header-menu.is-open .header-menu-mobile-button-container
{
    +Media( below-50em )
    {
        display: flex;
    }
}

.header-menu-mobile-button
{
    border-radius: 8px;
    padding: 5px 10px;
    background-color: #444444;
    color: #FFFFFF;
    cursor: pointer;
}

.header-menu-mobile-button:hover,
.header-menu-mobile-button.is-selected
{
    background-color: #CCCCCC;
    color: #000000;
}

.header-menu-mobile-button + .header-menu-mobile-button
{
    margin-top: 1rem;
}

.header-menu-close-button
{
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;

    background: url( "/static/image/header/close_button.svg" ) no-repeat center center;
    background-size: contain;
}
