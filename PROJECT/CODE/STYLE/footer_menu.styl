.footer-menu
{
    height: 3rem;

    display: flex;
    justify-content: center;
    align-items: center;

    background-color: LightGrayColor;
}

.footer-menu-button
{
    font-size: 1rem;
    color: WhiteColor;

    cursor: pointer;
    transition: transform 0.3s ease;
}

.footer-menu-button:hover
{
    transform: scale( 1.2 );
}

.footer-menu-button.is-selected
{
    font-weight: bold;
}

.footer-menu-button + .footer-menu-button
{
    margin-left: 1rem;
}
