<style file="text_block.styl">
    .text-block
    {
        display: flex;
        flex-direction: column;
    }
</style>
<div class="block block-text-column appearing-block y-translation-opacity-transition text-block">
    <div class="block-title">
        <# .GetProcessedText( var block.Title ) #>
    </div>
    <div class="block-text">
        <# .GetProcessedMultilineText( block.Text ) #>
    </div>
</div>
