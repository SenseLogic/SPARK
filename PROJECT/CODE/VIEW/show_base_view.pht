<script>
    // -- VARIABLES

    var
        ViewName = "<# .ViewName #>";

    // -- FUNCTIONS

    function InitializeView(
        )
    {
        EmitEvent( "initialize-view" );
    }

    // ~~

    function UpdateView(
        )
    {
        EmitEvent( "update-view" );
    }

    // ~~

    function SetViewName(
        view_name
        )
    {
        window.SetScrollTop( 0 );
        ViewName = view_name;
        SetRoute( "/<# .LanguageCode #>/" + view_name + "/" );
        UpdateView();
    }

    // ~~

    function SelectView(
        element
        )
    {
        SetViewName( element.dataset.viewName );
    }
</script>
