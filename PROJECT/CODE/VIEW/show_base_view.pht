<script>
    // -- STATEMENTS

    AddEventListener(
        "update-view",
        function (
            )
        {
            GetElements( ".view" ).Iterate(
                function (
                    element
                    )
                {
                    element.ToggleClass( "display-none!", element.dataset.viewName !== ViewName );
                }
                );
        }
        );

    InitializeView();
    ShowView();
    HandleResizeEvent( ShowView );
    HandleRouteEvent( ShowView );
</script>
