<script>
    // -- VARIABLES

    var
        ViewName,
        SectionName;

    // -- FUNCTIONS

    function InitializeView(
        )
    {
        EmitEvent( "initialize-view" );
    }

    // ~~

    function ShowView(
        route
        )
    {
        if ( route !== undefined )
        {
            SetRoute( "/<# .LanguageCode #>/" + route );
            TrackRoute();
        }

        ViewName = GetRoute( "/<# .LanguageCode #>/", "/" );
        SectionName = GetHash();

        if ( ViewName === "" )
        {
            ViewName = "home";
        }

        EmitEvent( "update-view" );

        if ( SectionName === "" )
        {
            SetScrollTop( 0 );
        }
        else
        {
            SetScrollTop( GetElementById( ViewName + "/" + SectionName ), "auto" );
        }
    }

    // ~~

    function SetLanguage(
        language
        )
    {
        var
            route;

        route = GetRoute( "/<# .LanguageCode #>/", "/" );

        if ( route === "" )
        {
            SetUrl( "/" + language + "/" );
        }
        else
        {
            SetUrl( "/" + language + "/" + route + "/" );
        }
    }
</script>
