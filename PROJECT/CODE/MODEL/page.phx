// -- FUNCTIONS

function GetDatabasePageArray(
    )
{
    var statement = GetDatabaseStatement( 'select `Id`, `Route`, `TypeSlug`, `Number`, `LanguageCodeArray`, `IsActive`, `Title`, `Teaser`, `ImagePath`, `ImageVerticalPosition`, `ImageHorizontalPosition`, `VideoPath` from `PAGE` order by `Number` asc' );

    if ( !statement.execute() )
    {
        var_dump( statement.errorInfo() );
    }

    var page_array = [];

    while ( var page = statement.fetchObject() )
    {
        page.Number = ( float )( page.Number );
        page.LanguageCodeArray = json_decode( page.LanguageCodeArray );
        array_push( page_array, page );
    }

    return page_array;
}

