function GetDatabasePageById(
    string id
    )
{
    var statement = GetDatabaseStatement( 'select `Id`, `Route`, `TypeSlug`, `Number`, `LanguageCodeArray`, `IsActive`, `Title`, `Teaser`, `ImagePath`, `ImageVerticalPosition`, `ImageHorizontalPosition`, `VideoPath` from `PAGE` where `Id` = ? limit 1' );
    statement.bindParam( 1, id, PDO::PARAM_STR );

    if ( !statement.execute() )
    {
        var_dump( statement.errorInfo() );
    }

    var page = statement.fetchObject();
    page.Number = ( float )( page.Number );
    page.LanguageCodeArray = json_decode( page.LanguageCodeArray );

    return page;
}

