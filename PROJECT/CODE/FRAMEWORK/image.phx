function DrawLine(
    image,
    float first_column,
    float first_row,
    float last_column,
    float last_row,
    float color_red,
    float color_green,
    float color_blue,
    float color_opacity = 255
    )
{
    imageline(
        image,
        first_column,
        first_row,
        last_column,
        last_row,
        GetImageColor( image, color_red, color_green, color_blue, color_opacity )
        );
}

