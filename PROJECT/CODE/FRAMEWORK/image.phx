function DrawBox(
    image,
    box,
    float color_red,
    float color_green,
    float color_blue,
    float color_opacity = 255
    )
{
    imagerectangle(
        image,
        box.Column,
        box.Row,
        box.Column + box.Width - 1,
        box.Row + box.Height - 1,
        GetImageColor( image, color_red, color_green, color_blue, color_opacity )
        );
}

