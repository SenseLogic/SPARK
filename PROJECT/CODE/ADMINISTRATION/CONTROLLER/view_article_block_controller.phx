// -- IMPORTS

import 'controller.php';
import '../../MODEL/article_block_model.php';

// -- TYPES

class VIEW_ARTICLE_BLOCK_CONTROLLER extends CONTROLLER
{
    // -- CONSTRUCTORS

    method constructor(
        string language_code,
        article_block_id
        )
    {
        parent::constructor( language_code );

        .Title = 'View a article block';
        .ArticleBlock = GetDatabaseArticleBlockById( article_block_id );
        .ListRoute = FindSessionValue( 'ListRoute', '/admin/article-block' );

        import '../VIEW/view_article_block_view.php';
    }
}

// -- STATEMENTS

var view_article_block_controller = new VIEW_ARTICLE_BLOCK_CONTROLLER( var language_code, var article_block_id );
