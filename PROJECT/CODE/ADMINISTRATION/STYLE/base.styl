// -- CONSTANTS

BlackColor = #000000;
GrayColor = #808080;
WhiteColor = #FFFFFF;

RedColor = #E20048;
BlueColor = #001E68;

BorderColor = #CCCCCC;
GrayedColor = #AAAAAA;

// -- ELEMENTS

html
{
    background: WhiteColor;

    color: BlueColor;
}

body
{
    min-height: 100vh;
}

a
{
    text-decoration: none;
    color: inherit;
}

a:hover,
a:visited
{
    color: inherit;

    cursor: pointer;
}

a:hover,
input:hover
{
    text-decoration: none;
}

a:focus,
button:focus,
input:focus,
textarea:focus
{
    outline: none;
}

input,
textarea
{
    color: BlackColor;
}

// -- CLASSES

MakeRootFontSize( 16px );
MakeExtendedContainer();
MakeJustifySelfStart();
MakeJustifySelfEnd();
MakeFontWeightRange( 100, 100, 9 );
MakeSortableTableColumn();

