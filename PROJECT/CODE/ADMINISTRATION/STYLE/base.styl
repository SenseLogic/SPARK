// -- IMPORTS

@import "../../STYLE/VISTA/vista_reset.styl"
@import "../../STYLE/VISTA/vista.styl"

// -- ELEMENTS

html
{
    background: #FFFFFF;
}

body
{
    min-height: 100vh;
}

a
{
    color: inherit;
    text-decoration: none;
}

a:hover
{
    color: inherit;
    cursor: pointer;
}

a:hover,
input:hover
{
    text-decoration: none;
}

a:focus,
button:focus,
input:focus,
textarea:focus
{
    outline: none;
}

// -- CLASSES

MakeRootFontSize( 16px );
MakeContainerExtended();
MakeJustifySelfStart();
MakeJustifySelfEnd();
MakeFontWeightRange( 100, 100, 9 );

// ~~

.page-container
{
    display: grid;
    grid-template-columns: auto 1fr;
    grid-template-rows: auto 1fr;
    min-height: 100vh;
}

.page-menu
{
    grid-area: 1 / 1 / span 2;
    padding: 15px;
    display: flex;
    background-image: linear-gradient( to right, #29323c 0%, #485563 100%);
    width: 72px;
}

.page-menu-content
{
}

.page-menu-item
{
    margin-top: 10px;
}

.page-menu-title
{
    margin-left: 5px;
    font-size: 20px;
    color: #FFFFFF;
}

.page-title
{
    grid-area: 1 / 2;
    padding: 15px;
    text-align: center;
    background-image: linear-gradient( to top, #4481eb 0%, #04befe 100%);
}

.page-title-content
{
    font-size: 28px;
    color: #FFFFFF;
}

.page-body
{
    grid-area: 2 / 2;
    padding: 15px;
    background-image: linear-gradient( to top, #fdfbfb 0%, #ebedee 100%);
}

.page-body-content
{
    color: #222222;
}

.page-section
{
    border-radius: 10px;
    background-color: #FFFFFF;
    padding: 15px;
}

.page-section + .page-section
{
    margin-top: 15px;
}

.form-container
{
    display: grid;
    grid-template-columns: auto 1fr;
    grid-gap: 15px;
    justify-content: center;
    align-items: flex-start;
    width: 100%;
}

.form-container-small
{
    max-width: 30rem;
}

.form-extended
{
    grid-column: 1 / -1;
}

.form-input
{
    display: block;
    border: 1px solid #CCCCCC;
    border-radius: 5px;
    padding: 5px;
    width: 100%;
}

.form-textarea
{
    display: block;
    border: 1px solid #CCCCCC;
    border-radius: 5px;
    padding: 5px;
    width: 100%;
    height: 36px;
    min-height: 36px;
    overflow: hidden;
}

.form-upload-container
{
    display: flex;
    align-items: center;
    margin-top: 8px;
}

.form-upload-image,
.form-upload-video
{
    border-radius: 5px;
    width: auto;
    max-width: 80%;
    height: 200px;
}

.form-upload-icon
{
    margin-left: 4px;
    height: 16px;
}

.form-upload-file
{
    height: 0;
    width: 0;
    overflow: hidden;
}

.form-field-name
{
    font-weight: bold;
    padding-top: 5px;
}

.form-column-name
{
    font-weight: bold;
}

.form-centered
{
    display: flex;
    justify-content: center;
    align-items: center;
}

.form-button
{
    display: inline-block;
    border: none;
    width: 24px;
    height: 24px;
}

.form-button + .form-button
{
    margin-left: 5px;
}

.form-button-large
{
    width: 40px;
    height: 40px;
}

.disconnect-button
{
    background: url(/static/image/admin/disconnect_icon.svg) no-repeat center center;
    background-size: contain;
}

.connect-button
{
    background: url(/static/image/admin/connect_icon.svg) no-repeat center center;
    background-size: contain;
}

.view-button
{
    background: url(/static/image/admin/view_icon.svg) no-repeat center center;
    background-size: contain;
}

.edit-button
{
    background: url(/static/image/admin/edit_icon.svg) no-repeat center center;
    background-size: contain;
}

.remove-button
{
    background: url(/static/image/admin/remove_icon.svg) no-repeat center center;
    background-size: contain;
}

.add-button
{
    background: url(/static/image/admin/add_icon.svg) no-repeat center center;
    background-size: contain;
}

.cancel-button
{
    background: url(/static/image/admin/cancel_icon.svg) no-repeat center center;
    background-size: contain;
}

.apply-button
{
    background: url(/static/image/admin/apply_icon.svg) no-repeat center center;
    background-size: contain;
}

.table-container
{
    align-items: start;
}

.debug-outline *
{
    outline: 0.1px solid rgba( 255, 0, 0, 0.5 );
}
