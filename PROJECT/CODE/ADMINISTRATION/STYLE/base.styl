    background: url( "/static/image/admin/list_icon.svg" ) no-repeat center center / contain;
}

.table-container
{
    align-items: start;
}

.debug-outline *
{
    outline: 0.1 * Pxm solid rgba( 255, 0, 0, 0.5 );
}
