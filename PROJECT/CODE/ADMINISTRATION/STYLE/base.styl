.page-container
{
    min-height: 100vh;

    display: grid;
    grid-template-rows: 2.5rem auto 1fr;
    grid-template-columns: 1fr;
    grid-template-areas: \
        "menu" \
        "title" \
        "body";
}

.page-menu
{
    z-index: 1000;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;

    height: 2.5rem;
    padding-left: 1rem;
    padding-right: 1rem;

    display: flex;
    gap: 1.5rem;
    grid-area: menu;
    justify-content: center;
    align-items: center;

    background-color: WhiteColor;
}

.page-menu-button,
.page-menu-button:visited
{
    padding-top: 0.25rem;
    padding-bottom: 0.25rem;

    line-height: 1.1;
    font-size: 1rem;
    color: GrayColor;
}

.page-menu-button:hover
{
    color: RedColor;
}

.page-menu-framed-button
{
    border: 1px solid GrayColor;
    border-radius: 0.5rem;
    padding-left: 0.5rem;
    padding-right: 0.5rem;
}

.page-menu-framed-button:hover
{
    border: 1px solid RedColor;
}

.page-title
{
    width: calc( var( --viewport-width ) - 1.2rem );
    padding: 1rem;

    grid-area: title;

    font-size: 1.5rem;
    text-align: center;
    text-transform: uppercase;
    color: RedColor;
}

.page-body
{
    padding: 1rem;
    padding-bottom: 2rem;

    display: flex;
    flex-direction: column;
    gap: 1rem;
    grid-area: body;
}

.page-section
{
    border: 1px solid BorderColor;
    border-radius: 0.5rem;
    padding: 1rem;
}

.page-section + .page-section
{
    margin-top: 1rem;
}

.form-container
{
    width: 100%;

    display: grid;
    grid-template-columns: auto 1fr;
    grid-gap: 1rem;
    justify-content: center;
    align-items: start;
}

.form-container-small
{
    max-width: 30rem;
}

.form-limited
{
    max-width: calc( var( --viewport-width ) - 2rem );
}

.form-extended
{
    grid-column: 1 / -1;
}

.form-translation-list
{
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 0.25rem 0.5rem;
}

.form-translation-data
{
}

.form-translation-specifier
{
    text-align: right;
    color: GrayedColor;
}

.form-field-error,
.form-field-error + div input:not([readonly]),
.form-field-error + div textarea:not([readonly]),
.form-field-error + div select:not([readonly])
{
    outline: solid red 1px;
}

.form-input,
.form-select
{
    min-height: 2rem;
    width: 100%;
    border: 1 * Pxm solid BorderColor;
    border-radius: 0.25rem;
    padding: 0.25rem;

    display: block;

    background-color: WhiteColor;
}

.form-textarea
{
    overflow: hidden;
    height: 2.25rem;
    min-height: 2.25rem;
    width: 100%;
    border: 1 * Pxm solid BorderColor;
    border-radius: 0.25rem;
    padding: 0.25rem;

    display: block;
}

.form-input:not([hidden]) + .form-input:not([hidden]),
.form-textarea:not([hidden]) + .form-textarea:not([hidden])
{
    margin-top: 0.5rem;
}

.form-field-name
{
    padding-top: 0.25rem;

    font-weight: 700;
}

.form-field-value
{
}

.form-column-name
{
    font-weight: 700;
}

.form-centered
{
    display: flex;
    justify-content: center;
    align-items: center;
}

.form-text-button
{
    border-radius: 0.25rem;
    padding: 0.5rem 1rem;

    background-color: RedColor;

    color: WhiteColor;
}

.form-button
{
    height: 1.2rem;
    width: 1.2rem;
    border: none;

    display: inline-block;

    cursor: pointer;
}

.form-button + .form-button
{
    margin-left: 0.25rem;
}

.form-button-large
{
    height: 2rem;
    width: 2rem;
}

.form-button-tooltip
{
    display: none;
}

.form-button:hover + .form-button-tooltip
{
    margin-left: 0.5rem;
    border-top-right-radius: 0.25rem;
    border-bottom-right-radius: 0.25rem;
    padding: 0.25rem 0.75rem 0.25rem 0.5rem;

    display: inline-block;

    color: WhiteColor;
}

.form-upload-container
{
    display: grid;
    grid-template-rows: auto auto;
    grid-template-columns: auto auto auto 1fr;
    grid-template-areas : \
        "input input input input" \
        "preview upload-button delete-button .";
    gap: 0.5rem;
    align-items: center;
}

.form-upload-container.is-readonly
{
    gap: 0;
}

.form-upload-input
{
    grid-area: input;
}

.form-upload-image,
.form-upload-video
{
    height: 12.5rem;
    width: auto;
    max-width: 50vw;
    border-radius: 0.25rem;

    grid-area: preview;
}

.form-upload-button
{
    grid-area: upload-button;
}

.form-upload-file
{
    overflow: hidden;
    height: 0;
    width: 0;
}

.form-delete-button
{
    grid-area: delete-button;
}

.form-upload-button + .form-delete-button
{
    margin-left: 0;
}

.form-multilingual-container
{
