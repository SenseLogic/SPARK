// -- IMPORTS

@import "base_style.styl"

// -- CLASSES

.text-button
{
    background: url(/static/image/icon/admin/text_icon.svg) no-repeat center center;
    background-size: contain;
}

.category-button
{
    background: url(/static/image/icon/admin/category_icon.svg) no-repeat center center;
    background-size: contain;
}

.product-button
{
    background: url(/static/image/icon/admin/product_icon.svg) no-repeat center center;
    background-size: contain;
}

.contact-button
{
    background: url(/static/image/icon/admin/contact_icon.svg) no-repeat center center;
    background-size: contain;
}

.user-button
{
    background: url(/static/image/icon/admin/user_icon.svg) no-repeat center center;
    background-size: contain;
}

.text-table
{
    grid-template-columns: repeat( 3, auto );
}

.category-table
{
    grid-template-columns: repeat( 6, auto );
}

.article-table
{
    grid-template-columns: repeat( 7, auto );
}

.contact-table
{
    grid-template-columns: repeat( 5, auto );
}

.user-table
{
    grid-template-columns: repeat( 5, auto );
}
